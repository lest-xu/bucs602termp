<main class="flex-item">
	<section class="products">
		<h2>üçé Inventory <span class="badge bg-primary rounded-pill">8</span><button type="button"
				class="btn btn-Secondary ms-3">Reset</button></h2>
		{{#if data}}
		<p>Cart: 0</p>
		{{else}}
		<P>Empty store, please come back later!</P>
		{{/if}}

		<div class="grid-container">

			{{#each data}}

			<div class='grid-item' style="background-image: url({{this.imgUrl}})">
				<div class='font-weight-bold'>
					{{this.name}}
				</div>
				{{!-- <div class='text-end'>
					{/* set onClick event to handleDelete with sku as param */}
					<button type='button' class='btn btn-danger btn-sm' onClick={ ()=>
						this.handleDelete(this.sku)}>Delete</button>
					<Link class="btn btn-link" to={`/product/${this.sku}`}>Detail</Link>
				</div> --}}
				<div>Description: {{this.description}}</div>
				<div>Quantity: {{this.quantity}}</div>
				<div>Price: <span class='text-success'>${{this.price}} </span></div>
			</div>

			{{/each}}
		</div>
	</section>
</main>
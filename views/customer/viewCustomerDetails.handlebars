{{#if customer}}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Customer: {{customer.firstName}} {{customer.lastName}}
                </div>

                <div class="card-body">
                    <p class="card-text">Email: {{customer.email}}</p>
                    <p class="card-text">Phone: {{customer.phone}}</p>


                </div>
            </div>

            {{#if orders.length}}
            <h4 class="card-title mt-3">Total Orders: <span class="badge badge-light">{{orders.length}}</span></h4>

            <ul class="list-group">
                {{#each orders}}
                <li class="list-group-item">
                    <strong>Order Date:</strong> {{this.date}}<br>
                    <strong>Items:</strong>
                    <ul>
                        {{#each this.products}}
                        <li> <img src="{{this.imgUrl}}" alt="{{this.name}}" style="height: 25px;">
                            {{this.name}} : ${{this.price}} - Quantity: {{this.quantity}} - Total:
                            ${{this.total}}</li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>You have no previous orders.</p>
            {{/if}}
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

{{else}}
<tr>
    <td colspan="3">No Products found...</td>
</tr>
{{/if}}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3>Your Order History</h3>

            {{#if orders.length}}
            <h5>Total Orders: <span class="badge badge-light">{{orders.length}}</span></h5>

            <ul class="list-group">
                {{#each orders}}
                <li class="list-group-item">
                    <strong>Order Date:</strong> {{formatDate this.date}}<br>
                    <strong>Items:</strong>
                    <ul>
                        {{#each this.products}}
                        <li> <img src="{{this.imgUrl}}" alt="{{this.name}}" style="height: 25px;">
                            {{this.name}} : ${{formatCurrency this.price}} - Quantity: {{this.quantity}} - Total: ${{this.total}}</li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>You have no previous orders.</p>
            {{/if}}
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{{#if customer}}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Customer: {{customer.firstName}} {{customer.lastName}}
                </div>

                <div class="card-body">
                    <p class="card-text">Email: {{customer.email}}</p>
                    <p class="card-text">Phone: {{customer.phone}}</p>


                </div>
            </div>

            {{#if orders.length}}
            <h5 class="card-title mt-3">Total Orders: <span class="badge badge-light">{{orders.length}}</span></h5>

            <ul class="list-group">
                {{#each orders}}
                <li class="list-group-item mb-3">
                    <strong>Order Date:</strong> {{this.date}}<br>
                    <strong>Items:</strong>
                    <ul>
                        {{#each this.products}}
                        <li> <img src="{{this.imgUrl}}" alt="{{this.name}}" style="height: 25px;">
                            {{this.name}} : ${{this.price}} - Quantity:
                            <form action="/admin/orders/update/{{../this.id}}/item/{{this.id}}" method="POST"
                                class="d-inline">
                                <input type="number" name="quantity" value="{{this.quantity}}" min="1">
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>
                            - Total: ${{this.total}}
                        </li>
                        {{/each}}
                    </ul>
                    <div class="mt-2 text-right">
                        <!-- delete the order -->
                        <form action="/admin/orders/delete/{{this.id}}" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">‚ùå Delete Order</button>
                        </form>
                    </div>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>You have no previous orders.</p>
            {{/if}}
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

{{else}}
<tr>
    <td colspan="3">No Products found...</td>
</tr>
{{/if}}
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3>Your Cart</h3>
            {{#if cart.length}}
            <ul class="list-group mb-3">
                {{#each cart}}
                <li class="list-group-item">
                    <img src="{{this.imgUrl}}" alt="{{this.name}}" style="height: 25px;">
                    <span>{{this.name}} - Quantity:</span>
                    <form action="/update-cart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="{{this.id}}">
                        <input type="number" name="quantity" value="{{this.quantity}}" min="1">
                        <button type="submit" class="btn btn-success btn-sm">üìùUpdate</button>
                    </form>
                    <form action="/remove-from-cart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="{{this.id}}">
                        <button type="submit" class="btn btn-default btn-sm">‚ùå</button>
                    </form>
                    <span>- Total: ${{formatCurrency this.total}}</span>
                </li>
                {{/each}}
            </ul>

            <h5 class="text-right">Items: <span class="badge badge-primary">{{totalQuantity}}</span></h5>
            <h5 class="text-right">üí∞ Total: <span class="badge badge-success">${{formatCurrency grandTotal}}</span></h5>

            <h3 class="mt-3">Customer Information</h3>
            <form action="/checkout" method="post">
                <div class="form-group row">
                    <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="firstName" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="lastName" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" name="email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="tel" class="form-control" name="phone">
                    </div>
                </div>
                
                <div class="text-right"><button type="submit" class="btn btn-primary mt-3">‚úÖ Checkout</button></div>
            </form>


            {{else}}
            <p>‚≠ïÔ∏è Your cart is empty.</p>
            {{/if}}
        </div>
        <div class="col-md-2"></div>
    </div>
</div>